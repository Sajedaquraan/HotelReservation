@model HotelReservation.Models.Page

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Page</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pagename)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pagename)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pageimage)
