@model TestimonialChartViewModel

@{
    ViewData["Title"] = "Testimonial Pie Chart";
}

<div style="width: 50%;height: 300px; ">
    <canvas id="testimonialChart"></canvas>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Prepare data from the ViewModel
        const labels = @Html.Raw(Json.Serialize(Model.Labels));
        const data = @Html.Raw(Json.Serialize(Model.Counts));

        const ctx = document.getElementById('testimonialChart').getContext('2d');
        new Chart(ctx, {
            type: 'pie',
            data: {
                labels: labels,
                datasets: [{
                    data: data,
                    backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56'], // Customize colors as needed
                }]
            },
            options: {
                responsive: true
            }
        });
    </script>
}
