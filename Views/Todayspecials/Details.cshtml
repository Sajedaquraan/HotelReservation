@model HotelReservation.Models.Todayspecial

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Todayspecial</h4>
    <hr />
