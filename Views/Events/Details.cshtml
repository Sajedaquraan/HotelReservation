@model HotelReservation.Models.Event

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Eventname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Eventname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Eventdate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Eventdate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Imagepath)
        </dt>
        <dd class = "col-sm-10">
            <img src=@Url.Content("~/Images/"+Model.Imagepath) asp-append-version="true"
                 style="border-radius:15%"
                 width="100" height="100" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Hotel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hotel.Hotelid)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Eventid">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
