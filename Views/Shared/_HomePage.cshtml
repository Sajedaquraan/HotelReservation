            <a title="vivid-yellow" class="switcher vivid-yellow-bg"></a>
        </div>
    </section>


    <script>

        document.addEventListener('DOMContentLoaded', function () {
            var profileIcon = document.getElementById('profile-icon');
            var profilePopover = document.getElementById('profile-popover');

            profileIcon.addEventListener('click', function (e) {
                e.preventDefault();
                profilePopover.style.display = profilePopover.style.display === 'none' ? 'block' : 'none';
            });

            document.addEventListener('click', function (e) {
                if (!profileIcon.contains(e.target) && !profilePopover.contains(e.target)) {
                    profilePopover.style.display = 'none';
                }
            });
        });

    </script>

    <!-- ALL JS FILES -->
    <script src="~/HomePage/js/all.js"></script>
    <script src="~/HomePage/js/bootstrap.min.js"></script>
