@model Testimonial
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Contact Us</title>
    <!-- Font Icon -->
    <link rel="stylesheet" href="~/RegisterAndLogin/fonts/material-icon/css/material-design-iconic-font.min.css">
    <!-- Bootstrap CSS for modal -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Main css -->
    <link rel="stylesheet" href="~/RegisterAndLogin/css/style.css">

    <!-- Additional Custom CSS -->
    <style>
        .container {
            max-width: 800px; /* زيادة عرض البوكس */
            margin: auto;
            position: relative; /* إضافة هذا لجعل التمركز يعمل */
            height: 100vh; /* جعل الارتفاع يعادل طول الشاشة بالكامل لتمركز أفضل */
            display: flex;
            justify-content: center;
            align-items: center;
        }

        input[type="text"], input[type="email"], textarea {
            width: 100%;
            padding: 15px;
            box-sizing: border-box;
            margin-bottom: 20px;
        }

        textarea {
            height: 150px; 
            resize: vertical;
        }

        .form-title {
            margin-bottom: 20px;
        }

        .form-reservations-box {
            padding: 30px; 
            background-color: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.1);
            max-width: 600px; 
            width: 100%;
            margin: auto;
        }

        .reserve-book-btn input, .reserve-book-btn a {
            display: block;
            width: 100%;
            text-align: center;
            padding: 12px;
            font-size: 18px; 
            border: none;
            background-color: #007bff;
            color: #fff;
            border-radius: 5px;
            margin-bottom: 20px;
            transition: background-color 0.3s;
        }

            .reserve-book-btn input:hover, .reserve-book-btn a:hover {
                background-color: #0056b3;
                text-decoration: none;
            }
    </style>
</head>
<body>
    <div class="main">
        <section class="sign-in">
            <div class="container">
                <div class="signin-content">
                    <div class="form-reservations-box">
                        <div class="wow fadeIn" data-wow-duration="1s" data-wow-delay="0.1s">
                            <h2 class="block-title text-center">
                                Testimonials
                            </h2>
                        </div>
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit</p>

                        <form method="post">
                            <textarea asp-for="Comments" rows="5" required></textarea>
                            <div class="form-group">
                                <button type="submit">Submit Testimonial</button>
                            </div>
                            <a href="@Url.Action("Index")#Testimonial">Back to Home Page</a>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/RegisterAndLogin/js/main.js"></script>
</body>
</html>
