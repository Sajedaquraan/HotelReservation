@model Customer
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up Form by Colorlib</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="~/RegisterAndLogin/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="~/RegisterAndLogin/css/style.css">

    <style>
        .signup-content {
            position: relative; /* Ensure the container is positioned relative */
        }

        .close-button {
            position: absolute;
            top: 10px;
            right: 10px;
            background: #fff;
            border: 2px solid #000;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            text-align: center;
            line-height: 30px;
            font-size: 20px;
            color: #000;
            text-decoration: none;
            z-index: 1000;
        }

            .close-button:hover {
                background: #f0f0f0;
                border-color: #333;
            }
    </style>
</head>
<body>

    <div class="main">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <!-- Close Button -->
                    <a href="@Url.Action("Index", "Home")" class="close-button" title="Go to Home Page">
                        <span>&times;</span>
                    </a>
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        <form method="POST" class="register-form" id="register-form" enctype="multipart/form-data">
                            <div class="form-group">
                                <label asp-for="Customername"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" asp-for="Customername" placeholder="Your Name" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Email"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" asp-for="Email" placeholder="Your Email" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Profileinfo"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" asp-for="Profileinfo" placeholder="Profile Information" />
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageFile"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input asp-for="ImageFile" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" asp-for="Password" placeholder="Password" />
                            </div>

                            <div class="form-group">
                                <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                                <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in <a href="#" class="term-service">Terms of service</a></label>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="~/Images/7475e196bba7ffba17ac97ae181698b2.jpg" alt="sing up image"></figure>
                        <a href="@Url.Action("Login")" class="signup-image-link">I have account</a>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- JS -->
    <script src="~/RegisterAndLogin/vendor/jquery/jquery.min.js"></script>
    <script src="~/RegisterAndLogin/js/main.js"></script>
</body>
<!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
